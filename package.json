{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "description": "Real-time collaborative drawing canvas with WebSockets",
  "main": "dist/server/src/server/index.js",
  "scripts": {
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "webpack --mode production",
    "build": "npm run build:server && npm run build:client",
    "dev:server": "nodemon --watch 'src/server/**/*.ts' --exec 'ts-node' src/server/index.ts",
    "dev:client": "webpack --mode development --watch",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "start": "npm run build && node dist/server/src/server/index.js",
    "clean": "rm -rf dist public/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "canvas",
    "collaborative",
    "websocket",
    "real-time",
    "drawing"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "uuid": "^9.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}